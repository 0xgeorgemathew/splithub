{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "build": {
      "cache": [
        "node_modules",
        ".yarn/cache",
        "packages/nextjs/.next/cache"
      ],
      "env": {
        "NODE_ENV": "production",
        "NEXT_TELEMETRY_DISABLED": "1",
        "SKIP_ENV_VALIDATION": "true"
      },
      "commands": [
        "yarn workspace @se-2/nextjs build",
        "cp -r packages/nextjs/public packages/nextjs/.next/standalone/packages/nextjs/public",
        "cp -r packages/nextjs/.next/static packages/nextjs/.next/standalone/packages/nextjs/.next/static"
      ]
    }
  },
  "deploy": {
    "startCommand": "node packages/nextjs/.next/standalone/packages/nextjs/server.js"
  }
}
